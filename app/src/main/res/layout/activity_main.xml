<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/snow"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.sistemainternacionalquiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextStyleFont"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/PrimeraPregunta"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/birmania"
                style="@style/TextStyleFont"
                android:text="@string/Birmania" />

            <CheckBox
                android:id="@+id/reinoUnido"
                style="@style/TextStyleFont"
                android:text="@string/ReinoUnido" />

            <CheckBox
                android:id="@+id/liberia"
                style="@style/TextStyleFont"
                android:text="@string/Liberia" />

            <CheckBox
                android:id="@+id/estadosUnidos"
                style="@style/TextStyleFont"
                android:text="@string/EstadosUnidos" />

            <CheckBox
                android:id="@+id/canada"
                style="@style/TextStyleFont"
                android:text="@string/Canada" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextStyleFont"
                android:text="@string/a"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/metroField"
                style="@style/TextStyleFont"
                android:layout_width="60dp"
                android:hint=""
                android:imeOptions="flagNoExtractUi" />

            <TextView
                style="@style/TextStyleFont"
                android:text="@string/b"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                style="@style/TextStyleFont"
                android:layout_marginBottom="20dp"
                android:text="@string/c"
                android:textStyle="bold" />

            <LinearLayout
                style="@style/TextStyleFont"
                android:layout_width="593dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextStyleFont"
                        android:layout_marginBottom="20dp"
                        android:text="@string/mgb"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextStyleFont"
                        android:text="@string/Longitud" />

                    <EditText
                        android:id="@+id/masaField"
                        style="@style/TextStyleFont"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:imeOptions="flagNoExtractUi" />

                    <TextView
                        style="@style/TextStyleFont"
                        android:text="@string/Tiempo" />

                    <TextView
                        style="@style/TextStyleFont"
                        android:text="@string/CorrienteElectrica" />

                    <TextView
                        style="@style/TextStyleFont"
                        android:text="@string/TemperaturaTermodinamica" />

                    <TextView
                        style="@style/TextStyleFont"
                        android:text="@string/CantidadSustancia" />

                    <TextView
                        style="@style/TextStyleFont"
                        android:text="@string/IntensidadLuminosa" />

                </LinearLayout>

                <LinearLayout
                    style="@style/TextStyleFont"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextStyleFont"
                        android:layout_marginBottom="20dp"
                        android:text="@string/UnidadBasica"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextStyleFont"
                        android:text="@string/metro" />

                    <TextView
                        style="@style/TextStyleFont"
                        android:text="@string/kilogramo" />

                    <EditText
                        android:id="@+id/segundoField"
                        style="@style/TextStyleFont"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:imeOptions="flagNoExtractUi" />

                    <TextView
                        style="@style/TextStyleFont"
                        android:text="@string/amperio" />

                    <TextView
                        style="@style/TextStyleFont"
                        android:text="@string/kelvin" />

                    <TextView
                        style="@style/TextStyleFont"
                        android:text="@string/mol" />

                    <EditText
                        android:id="@+id/candelaField"
                        style="@style/TextStyleFont"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:imeOptions="flagNoExtractUi" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</ScrollView>
